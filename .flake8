[flake8]
# Configuration for flake8 linter
# flake8 checks Python code for PEP8 compliance and common errors

# Maximum line length (default is 79, we use 120 for modern screens)
max-line-length = 120

# Directories to exclude from linting
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .dvc,
    mlartifacts,
    artifacts,
    models,
    data,
    notebooks

# Error codes to ignore:
# E203: whitespace before ':' (conflicts with black formatter)
# W503: line break before binary operator (old style, now recommended)
# E501: line too long (handled by max-line-length)
ignore = E203,W503,E501,E402,F541,W293,W291,E722

# Show source code for each error
show-source = True

# Count number of occurrences of each error/warning
count = True

# Display statistics at the end
statistics = True
